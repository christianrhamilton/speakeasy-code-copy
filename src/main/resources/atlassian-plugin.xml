<atlassian-plugin key="org.petchell.speakeasy.codecopy" name="Code Macro Copy to Clipboard Extension" plugins-version="2">
    <plugin-info>
        <description>Simple extension that add a copy open to code macros in confluence.</description>
        <version>1.0</version>
        <vendor name="Craig Petchell" url="http://craig.petchell.org" />
    </plugin-info>

    <scoped-web-resource key="code-copy">
        <resource type="download" name="code-copy.js" location="js/code-copy.js" />
        <resource type="download" name="zero-clipboard.js" location="zeroclipboard/ZeroClipboard.js" />
        <resource type="download" name="code-copy.css" location="css/code-copy.css" />
        <resource type="download" name="clipboard.png" location="images/clipboard.png" />
        <!-- Cheat speakeasy by bundling the flash file as a png -->
        <resource type="download" name="zero-clipboard.swf" location="zeroclipboard/ZeroClipboard.png"/>
        <context>page</context>
        <context>blogpost</context>
    </scoped-web-resource>

</atlassian-plugin>
